<%= render partial: "layouts/admin_nav" %>
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <h2>All Articles For The Explore Section</h2>
            <%= link_to 'Create New Article', new_explore_article_path %>
            <table class="table">
                <thead class="thead-inverse">
                  <th>Title</th>
                  <th>Author</th>
                  <th>Source</th>
                  <th>Category ID</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </thead>

                <% @explore_articles.each do |article| %>
                  <tr>
                    <td><%= link_to article.title, explore_article_path(article) %></td>
                    <td><%= article.author %></td>
                    <td><%= article.source %></td>
                    <td><%= article.explore_category_id %></td>
                    <td><%= link_to 'Edit', edit_explore_article_path(article) %></td>
                    <td><%= link_to 'Delete', explore_article_path(article), method: :delete, data: {confirm: "Are you certain you want to delete this record?"} %></td>
                    <td></td>
                  </tr>
                <% end %>
            </table>
        </div>
    </div>
  </div>
</section>