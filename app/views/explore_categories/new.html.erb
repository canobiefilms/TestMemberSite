<section>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">

            <h3>Create New Explore Article</h3>

            <%= form_for @explore_article do |f| %>


              <p>
                <%= f.label :title %><br>
                <%= f.text_field :title %>
              </p>

              <p>
                <%= f.label :author %><br>
                <%= f.text_field :author %>
              </p>

              <p>
                <%= f.label :source %><br>
                <%= f.text_field :source %>
              </p>

              <p>
                <%= f.label :article_URL %><br>
                <%= f.text_field :article_URL %>
              </p>

              <p>
              <%= select_tag 'Category', options_from_collection_for_select(@category, 'id', 'name') %>
              </p>

              <p>
                <%= f.submit %>
              </p>

            <% end %>



            </div>
        </div>
    </div>
</section>