<%= render partial: "layouts/public_nav" %>
<body class="page">
  <section class="cat-id-<%= @category.id %> bg-img bg-<%= @category.color_theme %>">
      <div class="container">
          <div class="row">
              <div class="col-md-10 col-md-offset-1">
                  <%= @category.name.split(",").map {|split| "<h2 class=\"section-heading\"><span>#{split}</span></h2>" }.to_a.join(" ").html_safe %>
              </div>
          </div>
      </div>
  </section>
  <section>
    <div class="container">
      <div class="row">
          <div class="col-lg-12 col-md-12">
            <%= @category.desc.split("\n").map {|split| "<h3 class=\"sub-desc\">#{split}</h3>" }.to_a.join(" ").html_safe %>
          </div>
          <% @articles_by_category.each do |article| %>
          <div class="article-box col-lg-4 col-md-4 col-md-offset-1">
            <a href="<%= article.article_URL %>" target="_blank">
              <h4 class="art-title <%= @category.color_theme %>"><%= article.title %></h4>
              <p class="text-italicized"><%= article.author %></p>
              <p class="source"><%= article.source %></p>
            </a>
          </div>
          <% end %>
      </div>
    </div>
  </section>
</body>
