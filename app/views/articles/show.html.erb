<%= render partial: "layouts/member_nav" %>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <h3>
                <%= @article.title %>
              </h3>

              <p>
                <%= @article.text %>
              </p>

              <h4>Comments</h4>
              <%= render @article.comments %>


              <h4>Add a comment:</h4>
              <%= render 'comments/form'  %>

              <%= link_to 'Edit', edit_article_path(@article) %> |
              <%= link_to 'Back', articles_path %>

            </div>
        </div>
    </div>
</section>